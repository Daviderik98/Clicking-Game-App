<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisteredActivity">

    <TextView
        android:id="@+id/openParagraph"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/black"
        android:text="Welcome User"
        android:textAlignment="center"
        android:textColor="#f0f000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Thank you for playing! Your username is now retrieved as well as your Game Scores. Now you have one last choice, to save your record to the Database. If you arenÂ´t satisfied with your current username, just rotate the screen. You can also get a view of all players in the database so far. Otherwise, press the Red button to restart."
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/openParagraph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />

    <Button
        android:id="@+id/btn_Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-27dp"
        android:layout_marginTop="43dp"
        android:text="Send to Database"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewScoreTwo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewScoreTwo"
        app:layout_constraintTop_toBottomOf="@+id/openParagraph"
        app:layout_constraintVertical_bias="0.609" />

    <TextView
        android:id="@+id/viewScoreOne"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/black"
        android:text="Show Score One"
        android:textAlignment="center"
        android:textColor="#ff0"
        app:layout_constraintBottom_toTopOf="@+id/btn_Registration"
        app:layout_constraintEnd_toEndOf="@+id/openParagraph"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/openParagraph"
        app:layout_constraintTop_toBottomOf="@+id/openParagraph"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/viewScoreTwo"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/black"
        android:text="Show Score Two"
        android:textAlignment="center"
        android:textColor="#ff0"
        app:layout_constraintEnd_toEndOf="@+id/viewScoreOne"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/viewScoreOne"
        app:layout_constraintTop_toBottomOf="@+id/viewScoreOne" />

    <Button
        android:id="@+id/Return_to_Start"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:backgroundTint="#f00"
        android:text="Back"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/toDataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:backgroundTint="#f00f"
        android:text="View Database"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Registration"
        app:layout_constraintStart_toEndOf="@+id/btn_Registration"
        app:layout_constraintTop_toTopOf="@+id/btn_Registration" />
</androidx.constraintlayout.widget.ConstraintLayout>