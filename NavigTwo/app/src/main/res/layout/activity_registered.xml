<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisteredActivity">

    <TextView
        android:id="@+id/openParagraph"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:background="@color/black"
        android:text="Welcome User"
        android:textAlignment="center"
        android:textColor="#f0f000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:text="Thank you for playing! Your username for this session is shown in the Black Box, as well as your Game scores. Now you have one last choice, to save your record to the Database, or not. You can also get a view of all players in the database so far. Otherwise, press the Red button to restart."
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/openParagraph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to Database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openParagraph"
        app:layout_constraintVertical_bias="0.425" />

    <TextView
        android:id="@+id/viewScoreOne"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:background="@color/black"
        android:text="Show Score One"
        android:textAlignment="center"
        android:textColor="#ff0"
        app:layout_constraintBottom_toTopOf="@+id/btn_Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openParagraph"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/viewScoreTwo"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginBottom="72dp"
        android:background="@color/black"
        android:text="Show Score Two"
        android:textAlignment="center"
        android:textColor="#ff0"
        app:layout_constraintBottom_toTopOf="@+id/btn_Registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewScoreOne"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Return_to_Start"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:backgroundTint="#f00"
        android:text="Back"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008" />

    <Button
        android:id="@+id/toDataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#f00f"
        android:text="View Database"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Registration" />
</androidx.constraintlayout.widget.ConstraintLayout>